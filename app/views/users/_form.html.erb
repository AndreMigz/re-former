<%= form_with(model: @user, local: true) do |f| %>
    
    <% if @user.errors.any? %>
      <section class="errors">
        <h2>
            Oops! Your form could not be saved.
        </h2>
        <h3>
            Please correct the following
            <%= pluralize(@user.errors.size, "error")%>
        </h3>
        <ul class="error-list">
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
      </section>
    <% end %>

    <%#= f.label :username %><br>
    <%= f.text_field :username, autofocus: true, placeholder: "Username", class:"input"%><br>

    <%#= f.label :email %><br>
    <%= f.email_field :email, placeholder: "Email", class:"input" %><br>

    <%#= f.label :password %><br>
    <%= f.password_field :password, placeholder: "Password", class:"input" %><br>

    <% if @user.new_record? %>
        <%= f.submit "Submit", class: "btn btn-primary btn-lg"%><br>
    <% else %>
        <%= f.submit "Update User", class: "btn btn-primary btn-lg" %><br>
    <% end %>

    <%= link_to "Show Users List", users_path%>
<% end %>